{
    "manifest_version": 3,
    "name": "LeetCode GitHub Sync",
    "version": "1.0",
    "description": "Automatically sync your accepted LeetCode submissions to GitHub.",
    "permissions": [
      "storage",
      "alarms",
      "scripting"
    ],
    "host_permissions": [
      "https://leetcode.com/*",
      "https://api.github.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }